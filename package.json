{
  "name": "dear-mama",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint:check": "eslint . --cache --cache-strategy content --report-unused-disable-directives --max-warnings 0 --ignore-path .gitignore",
    "lint:fix": "eslint . --fix --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,cjs,mjs,json,md,mdx}\" --cache",
    "format:fix": "prettier --write \"**/*.{ts,tsx,cjs,mjs,json,md,mdx,html}\" --cache",
    "check": "pnpm lint:check && pnpm format:check && pnpm typecheck",
    "fix": "pnpm lint:fix && pnpm format:fix",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview"
  },
  "dependencies": {
    "@fontsource/inter": "^4.5.15",
    "@fontsource/kaisei-decol": "^4.5.12",
    "framer-motion": "^10.12.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^3.7.2",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "@vitejs/plugin-react-swc": "^3.3.1",
    "autoprefixer": "10.4.14",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.1",
    "postcss": "8.4.23",
    "prettier": "2.8.8",
    "prettier-plugin-tailwindcss": "^0.2.8",
    "tailwindcss": "3.3.2",
    "typescript": "^5.0.4",
    "vite": "^4.3.5"
  }
}
